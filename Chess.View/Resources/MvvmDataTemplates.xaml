<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:gameModel="clr-namespace:Chess.Model.Game;assembly=Chess.Model"
                    xmlns:window="clr-namespace:Chess.View.Window" 
                    xmlns:statusAndMode="clr-namespace:Chess.ViewModel.StatusAndMode;assembly=Chess.ViewModel">

    <DataTemplate DataType="{x:Type statusAndMode:PlayModeVM}">
        <window:PlayModeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type statusAndMode:RecordModeVM}">
        <window:RecordModeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type statusAndMode:ReviewModeVM}">
        <window:ReviewModeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type statusAndMode:ReviewModeHeaderDisplayVM}">
        <window:ReviewModeHeaderDisplyView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type statusAndMode:StatusDisplayVM}">
        <window:StatusDisplayView/>
    </DataTemplate>

</ResourceDictionary>
