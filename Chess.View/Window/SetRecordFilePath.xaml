<Window x:Class="Chess.View.Window.SetRecordFilePath"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.View.Window"
        mc:Ignorable="d"
        Title="SetRecordFilePath" Height="250" Width="800"
        Closing="Window_Closing">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Folder Path:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBlock Name="txtFolderPath" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Button x:Name="btnSetFolder" Content="Set Folder" Click="btnSetFolderPath_Click" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="File Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="txtFileName" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Button x:Name="btnGenerateFileName" Content="Regenerate File Name" Click="btnGenerateFileName_Click" />
        </StackPanel>
        <TextBlock Name="txtMessage" VerticalAlignment="Center" Margin="5,0,5,0"/>

        <StackPanel Orientation="Horizontal">
            <Button Name="btnOk" Click="btnOk_Click" Margin="5,0,5,0" >OK</Button>
            <Button Name="btnCancel" Click="btnCancel_Click"  Margin="5,0,5,0" >Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
