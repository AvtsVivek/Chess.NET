<UserControl x:Class="Chess.View.StatusAndMode.ManualReviewModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.View.StatusAndMode"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" >
        <Button Margin="0 0 5 0" VerticalAlignment="Center" Command="{Binding GetToStartCommand}" ToolTip="Get to Start" >
            <iconPacks:PackIconOcticons Kind="MoveToEnd16" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center">
                <iconPacks:PackIconOcticons.RenderTransform>
                    <RotateTransform Angle="180" CenterX="8" CenterY="8" />
                </iconPacks:PackIconOcticons.RenderTransform>
            </iconPacks:PackIconOcticons>
        </Button>
        <Button Margin="0 0 5 0"  VerticalAlignment="Center" Command="{Binding UndoCommand}" ToolTip="Previous Move">
            <iconPacks:PackIconMicrons Kind="ArrowLeft" />
        </Button>
        <Button Margin="0 0 5 0"  VerticalAlignment="Center" Command="{Binding RedoCommand}" ToolTip="Next Move">
            <iconPacks:PackIconMicrons Kind="ArrowRight" />
        </Button>
        <Button  Margin="0 0 5 0" VerticalAlignment="Center" Command="{Binding GetToLastCommand}" ToolTip="Get to last Move">
            <iconPacks:PackIconOcticons Kind="MoveToEnd16" />
        </Button>
    </StackPanel>
</UserControl>
